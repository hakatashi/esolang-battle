doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    meta(name='login', content=user ? 'true' : 'false')
    meta(name='google-site-verification', content='KtZjmWdS59LVbodX-T7iwVZ-05QUhf_4D4gG2HUHUUc')
    if contest
      meta(name='contest-id', content=contest.id)
      meta(data-name='contest-start', content=contest.start.toISOString())
    title
      = title ? `${title} - ` : ''
      = contest ? `${contest.name}` : 'Esolang Battler'
    link(rel='shortcut icon', href=`/favicon.png?${hash}`)
    link(rel='stylesheet', href=`/css/main.css?${hash}`)
    block head

  body
    include partials/header
    
    .container
      include partials/flash
      
    block content

    include partials/footer
    
